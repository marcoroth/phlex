<% module_namespacing do -%>
module Views
  class <%= class_name %> < Phlex::HTML
    include ApplicationView

    def template
      <%= "# " unless @layout %>render Layout.new(title: "<%= class_name.gsub("::", " ").titlecase %>") do
        h1 { "<%= class_name %>" }
        p { "Find me in <%= @path %>" }
      <%= "# " unless @layout %>end
    end
  end
end
<% end %>
